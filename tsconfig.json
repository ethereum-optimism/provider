{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": [
      "es7"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./build",
    "resolveJsonModule": true
  },
  "include": ["*.ts", "**/*.ts"]
}
